<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_premium"
           android:scaleType="centerCrop"
           android:src="@drawable/images"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_margin="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Hãy mua gói Sonic Premium để trải nghiệm các tính năng như gói thường"
           android:layout_alignBottom="@+id/iv_premium"
           android:textSize="20dp"

           android:shadowColor="@color/black"
           android:shadowDx="2"
           android:shadowDy="2"
           android:shadowRadius="3"
           android:textStyle="bold"

           android:ellipsize="end"
           android:maxLines="2"
           />
   </RelativeLayout>

    <TextView
        android:id="@+id/tv_registered_preminum"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="ĐÃ ĐĂNG KÍ PREMIUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_prenium"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không quảng cáo"
            />
        <TextView
            android:layout_marginBottom="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Có thể tải nhạc"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghe nghạc với chất lượng cao nhất"
            />
        <TextView
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 49 000 VND"
            />
        <Button
            android:id="@+id/bt_premuim"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua Premuum"
            />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>