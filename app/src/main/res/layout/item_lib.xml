<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_lib"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:stateListAnimator="@drawable/item_lib"
    >





    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLib"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="45dp">

        <ImageView
            android:id="@+id/imageViewLib"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/images" />


    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/cardViewLib"
    android:layout_centerVertical="true"
    >
    <TextView
        android:id="@+id/textViewNameLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Tên" />

    <TextView
        android:id="@+id/textViewGenLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Thể loại" />
</LinearLayout>

</RelativeLayout>
