<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_song"

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/images" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/img_song"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_single_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/img_stop_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_stop"
        android:padding="10dp"
        />
    <ImageButton
        android:id="@+id/img_skip_next_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_stop_notification"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_skip_next"
        android:padding="10dp"
        />
    <ImageButton
        android:id="@+id/img_play_or_pause_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_skip_next_notification"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play"
        android:padding="10dp"
        />
    <ImageButton
        android:id="@+id/img_skip_previous_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_play_or_pause_notification"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_skip_previous"
        android:padding="10dp"
        />

</RelativeLayout>